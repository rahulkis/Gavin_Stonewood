							"defaultValue": "default"
						},
						{
							"id": "cookieIconCustom",
							"name": "Custom Icon",
							"description": "",
							"type": "file",
							"file": {
								"old": false,
								"accept": "image/*",
								"tabs": [
									{
										"name": "Upload File",
										"value": "upload"
									},
									{
										"name": "Recently Uploaded",
										"value": "files"
									},
									{
